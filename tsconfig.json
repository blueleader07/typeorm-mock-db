{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "declaration": true,
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "typeorm/data-source/BaseDataSourceOptions": ["./src/typeorm/data-source/BaseDataSourceOptions"],
      "typeorm/driver/DriverFactory": ["./src/typeorm/driver/DriverFactory"]
    }
  },
  "include": [
    "./src"
  ]
}
